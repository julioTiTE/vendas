generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// resto do schema continua igual...
model Vendedor {
  id         String              @id @default(uuid())
  nome       String
  email      String              @unique
  telefone   String
  ativo      Boolean             @default(true)
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  clientes   Cliente[]
  interacoes InteracaoWhatsApp[]
  pedidos    Pedido[]

  @@map("vendedores")
}

model Cliente {
  id                String              @id @default(uuid())
  nome              String
  telefone          String
  email             String?
  dataNascimento    DateTime?
  endereco          String?
  observacoes       String?
  ultimaCompraData  DateTime?
  vendedorId        String
  ativo             Boolean             @default(true)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  alertas           Alerta[]
  vendedor          Vendedor            @relation(fields: [vendedorId], references: [id])
  etiquetas         EtiquetaWhatsApp[]
  interacoes        InteracaoWhatsApp[]
  pedidos           Pedido[]
  produtosFavoritos ProdutoFavorito[]

  @@map("clientes")
}

model Produto {
  id                String            @id @default(uuid())
  nome              String
  categoria         String
  preco             Decimal           @db.Decimal(10, 2)
  descricao         String?
  ativo             Boolean           @default(true)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  itensPedido       ItemPedido[]
  produtosFavoritos ProdutoFavorito[]
  tabelasPreco      TabelaPreco[]

  @@map("produtos")
}

model Pedido {
  id          String       @id @default(uuid())
  clienteId   String
  vendedorId  String
  dataPedido  DateTime     @default(now())
  status      StatusPedido @default(ABERTO)
  valorTotal  Decimal      @db.Decimal(10, 2)
  observacoes String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  itens       ItemPedido[]
  cliente     Cliente      @relation(fields: [clienteId], references: [id])
  vendedor    Vendedor     @relation(fields: [vendedorId], references: [id])

  @@map("pedidos")
}

model ItemPedido {
  id            String  @id @default(uuid())
  pedidoId      String
  produtoId     String
  quantidade    Int
  precoUnitario Decimal @db.Decimal(10, 2)
  subtotal      Decimal @db.Decimal(10, 2)
  pedido        Pedido  @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  produto       Produto @relation(fields: [produtoId], references: [id])

  @@map("itens_pedido")
}

model EtiquetaWhatsApp {
  id           String   @id @default(uuid())
  descricao    String
  clienteId    String
  dataMarcacao DateTime @default(now())
  ativa        Boolean  @default(true)
  cliente      Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@map("etiquetas_whatsapp")
}

model InteracaoWhatsApp {
  id         String        @id @default(uuid())
  clienteId  String
  vendedorId String?
  dataHora   DateTime      @default(now())
  tipo       TipoInteracao
  conteudo   String
  cliente    Cliente       @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  vendedor   Vendedor?     @relation(fields: [vendedorId], references: [id])

  @@map("interacoes_whatsapp")
}

model Alerta {
  id          String       @id @default(uuid())
  clienteId   String
  tipo        TipoAlerta
  dataCriacao DateTime     @default(now())
  status      StatusAlerta @default(PENDENTE)
  mensagem    String
  urgencia    Urgencia     @default(MEDIA)
  cliente     Cliente      @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@map("alertas")
}

model ProdutoFavorito {
  id         String   @id @default(uuid())
  clienteId  String
  produtoId  String
  frequencia Int      @default(0)
  createdAt  DateTime @default(now())
  cliente    Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  produto    Produto  @relation(fields: [produtoId], references: [id])

  @@unique([clienteId, produtoId])
  @@map("produtos_favoritos")
}

model TabelaPreco {
  id                String   @id @default(uuid())
  produtoId         String
  clienteEspecifico String?
  preco             Decimal  @db.Decimal(10, 2)
  descricao         String?
  ativa             Boolean  @default(true)
  createdAt         DateTime @default(now())
  produto           Produto  @relation(fields: [produtoId], references: [id])

  @@map("tabelas_preco")
}

enum StatusPedido {
  ABERTO
  FECHADO
  CANCELADO
}

enum TipoInteracao {
  ENVIADA
  RECEBIDA
}

enum TipoAlerta {
  CLIENTE_INATIVO
  ORCAMENTO_ABERTO
  ANIVERSARIO
  FOLLOWUP
}

enum StatusAlerta {
  PENDENTE
  RESOLVIDO
}

enum Urgencia {
  ALTA
  MEDIA
  BAIXA
}